{
    "filters": {
        "comments": true,
        "allowlist": {
            "allow": [
                "line",
            ],
            "allowlistConfigPaths": [
            ],
        },
    },
    "rules": {
        "preset-ja-technical-writing": {
            "sentence-length": false,
            "ja-no-weak-phrase": false,
            "no-exclamation-question-mark": false,
        },
        "prh": {
            "rulePaths": ["~/dotfiles/document/WEB+DB_PRESS.yml"],
        },
    },
    "plugins": {
        "@textlint/markdown": true,
    },
}
